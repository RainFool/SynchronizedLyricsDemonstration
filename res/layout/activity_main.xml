<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lyricanimator.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="200dp"
        android:background="#0f0"
        android:gravity="right" >

        <com.example.lyricanimator.LyricTextView
            android:id="@+id/my_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:background="#f00"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="efageaegaegaegaetgeretgawetawetaetaetaertearae"
            android:textColor="#f9df00"
            android:textSize="80px" />
    </LinearLayout>

    <Button android:id="@+id/button_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pause"/>
</AbsoluteLayout>